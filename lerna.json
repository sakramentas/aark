{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "0.0.3-alpha.0",
  "packages": [
    "packages/config/**",
    "packages/lib/**",
    "packages/templates/**",
    "services/**"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "*.txt",
        "test/**",
        "**/test/**",
        "@(!(built-in-modules|built-ins|plugins|package)).json"
      ]
    }
  }
}
